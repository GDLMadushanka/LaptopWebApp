{{unit "cdmf.unit.lib.leaflet"}}
{{unit "cdmf.unit.lib.leaflet-contextmenu"}}

{{unit "cdmf.unit.ui.title" pageTitle="Home"}}
{{unit "uuf.unit.lib.form-validation"}}

{{#zone "topCss" override=false}}
    {{css "css/custom-devices.css"}}
    {{css "css/custom.css"}}
{{/zone}}

{{#zone "breadcrumbs"}}
    <li>
        <a href="{{@app.context}}/">
            <i class="icon fw fw-home"></i>
        </a>
    </li>
{{/zone}}

{{#zone "navbarActions"}}
    {{#if permissions.ADD_BUILDING}}
        <li>
            <!--suppress HtmlUnknownTarget -->
            <a href="#" class="cu-btn" onclick="onAddMarker()">
            <span class="icon fw-stack">
                <i class="fw fw-add fw-stack-1x"></i>
                <i class="fw fw-circle-outline fw-stack-2x"></i>
            </span>
                Add Device
            </a>
        </li>
    {{/if}}
{{/zone}}

{{#if permittednone}}
    {{#zone "body"}}
        <div class="message message-danger" style="margin: 20px">
            <h4><i class="icon fw fw-error"></i>401- Unauthorized</h4>
            <p>You do not have permissions to view this page. Please contact administrator..</p>
        </div>
    {{/zone}}
{{else}}
    {{#zone "body"}}

        Hi {{currentUser.username}}<br/>
        Your Groups :-<br/>
        {{#each userGroups}}
            <p>{{this.group.name}}</p>
            <a href="{{@app.context}}/device/linuxdevice/groupanalytics?groupId={{this.group.id}}"
               class="btn btn-xs btn-success">Group Analytics</a>
            <button class="btn btn-warning" onclick="showDevicesDiv('{{this.group.name}}')">Expand Group</button>
            <br/>
            <br/>
            <div id="group{{this.group.name}}devices" style="display: none;">
                {{#each this.devices}}
                    <p>{{this.name}}</p>
                    <a href="{{@app.context}}/device/linuxdevice?id={{this.deviceIdentifier}}"
                       class="btn btn-primary btn-xs">Realtime analytics</a>

                    <a href="{{@app.context}}/device/linuxdevice/analytics?deviceId={{this.deviceIdentifier}}&deviceName={{this.name}}"
                       class="btn btn-info btn-xs">Batch analytics</a>

                {{/each}}
            </div>
        {{/each}}
        <br/>
        Your Devices :-</br>
        {{#each userDevices}}
            <p>{{this.name}}</p>
            <a href="{{@app.context}}/device/linuxdevice?id={{this.deviceIdentifier}}"
               class="btn btn-primary btn-xs">Realtime analytics</a>
            <a href="{{@app.context}}/device/linuxdevice/analytics?deviceId={{this.deviceIdentifier}}&deviceName={{this.name}}"
               class="btn btn-info btn-xs">Batch analytics</a>
        {{/each}}




        <!--<div id="openStreetMapId" style="height:100%"></div>-->
    {{/zone}}


    {{#zone "navMenu-icon"}}
        <span class="icon fw-stack">
        <i class="fw fw-menu fw-stack-1x toggle-icon-down"></i>
    </span>
    {{/zone}}







    {{#zone "bottomJs"}}
        {{js "js/load-map.js"}}
        {{js "js/nav-menu.js"}}
    {{/zone}}

{{/if}}
